<div class="container-fluid" style="padding-top: 70px;">
  <h1 class="text-center"><%= @user.name %></h1>
  <hr />
  <div class="row">
    <div class="col-md-6">
      <h2 class="text-center">Watched Movies</h2>
      <hr />
      <% if @user.watched_movies.empty? %>
        <p>Looks like there are no watched movies! Sorry!</p>
      <% else %>
        <% @user.watched_movies.in_groups_of(3).each do |movie_slices| %>
          <div class="row">
            <% movie_slices.each do |movie| %>
              <% if movie %>
              <% puts movie %>
                <div class="col-md-4">
                  <h3 class="text-center"><%= link_to "#{truncate movie.title, :length => 16, :separator => /\w/, :omission => "..."}".html_safe, movie_path(movie.api_id) %></h3>
                  <hr />
                  <img style="margin: 0 auto" class="media-object" src="<%= movie.thumbnail %>" alt="movie poster" height="200">
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-6">
      <h2 class="text-center">Unwatched Movies</h2>
      <hr />
      <% if @user.unwatched_movies.empty? %>
        <p class="text-center">Looks like there are no unwatched movies! Sorry!</p>
      <% else %>
        <% @user.unwatched_movies.in_groups_of(3).each do |movie_slices| %>
          <div class="row">
            <% movie_slices.each do |movie| %>
              <% if movie %>
              <% puts movie %>
                <div class="col-md-4">
                  <h3 class="text-center"><%= link_to "#{truncate movie.title, :length => 16, :separator => /\w/, :omission => "..."}".html_safe, movie_path(movie.api_id) %></h3>
                  <hr />
                  <img style="margin: 0 auto" class="media-object" src="<%= movie.thumbnail %>" alt="movie poster" height="200">
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
