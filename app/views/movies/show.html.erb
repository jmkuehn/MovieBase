<div style="text-align: center">
  <div class="container-fluid" style="padding-top: 70px;">
    <div class="media">
      <div class="media-left">
        <a href="#">
          <img class="media-object" src="<%= @movie["thumbnail"] %>" alt="movie poster" height="200">
        </a>
      </div>
    <div class="media-body">
      <h4 class="media-heading" style="text-align:left"><%= @movie["title"] %></h4>
      <div class="row">
        <div class="col-md-4" style="padding-right:0">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Info</h3>
            </div>
            <div class="panel-body" style="padding-left:0;height:20em;overflow-y:scroll;">
              <div class="table-responsive">
                <table class="table">
                  <tr>
                    <td>Rating</td>
                    <td><%= @movie["rating"] %></td>
                  </tr>
                  <tr>
                    <td>Genre</td>
                    <td><%= @movie["genre"] %></td>
                  </tr>
                  <tr>
                    <td>Runtime</td>
                    <td><%= @movie["runtime"] %></td>
                  </tr>
                  <tr>
                    <td>Release Date</td>
                    <td><%= @movie["release_date"] %></td>
                  </tr>
                  <tr>
                    <td>Cast</td>
                    <td><%= @movie["cast"] %></td>
                  </tr>
                 </table>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-8">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Description</h3>
              </div>
              <div class="panel-body" style="padding-left:0;height:20em;overflow-y:scroll;">
                <%= @movie["short_description"] %>
              </div>
            </div>
          </div>
        </div>
